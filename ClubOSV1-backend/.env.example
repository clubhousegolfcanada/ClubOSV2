# ============================================
# PATTERN LEARNING SYSTEM (V3 Features in V1)
# ============================================
# BREADCRUMB: These control the new pattern learning system
# Start with PATTERN_LEARNING_ENABLED=false and PATTERN_LEARNING_SHADOW_MODE=true for safety

# Master switch for pattern learning (set to true to enable)
PATTERN_LEARNING_ENABLED=false

# Shadow mode - logs what would happen without executing (recommended for testing)
PATTERN_LEARNING_SHADOW_MODE=true

# Confidence thresholds (0.0 to 1.0)
PATTERN_AUTO_EXECUTE_THRESHOLD=0.95    # Minimum confidence for auto-execution
PATTERN_SUGGEST_THRESHOLD=0.75         # Minimum confidence for suggestions
PATTERN_QUEUE_THRESHOLD=0.50           # Minimum confidence to queue for approval

# Learning rates
PATTERN_CONFIDENCE_INCREASE_SUCCESS=0.05     # Confidence increase on success
PATTERN_CONFIDENCE_INCREASE_MODIFIED=0.02    # Confidence increase when modified but approved  
PATTERN_CONFIDENCE_DECREASE_FAILURE=0.10     # Confidence decrease on failure
PATTERN_CONFIDENCE_DECAY_DAILY=0.01         # Daily decay for unused patterns

# Automation settings
PATTERN_SUGGESTION_TIMEOUT_SECONDS=30        # Seconds before suggestion auto-executes
PATTERN_MIN_EXECUTIONS_FOR_AUTO=20          # Minimum successful executions before auto-executable

# Import settings
PATTERN_IMPORT_HISTORICAL_DATA=false        # Import historical conversations on startup
PATTERN_HISTORICAL_IMPORT_LIMIT=1000        # Number of historical conversations to import