{
  "name": "clubos-backend",
  "version": "1.0.0",
  "description": "ClubOS Backend - Local-first Node.js server for golf simulator management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --noEmit false --skipLibCheck true || echo 'Build completed with warnings'",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "create:admin": "tsx src/scripts/createAdmin.ts",
    "create:kiosk": "tsx src/scripts/createKioskUser.ts",
    "reset:admin": "tsx src/scripts/freshAdmin.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "check": "node scripts/check-config.js",
    "check:env": "node scripts/check-config.js",
    "generate:secrets": "cd .. && ./generate-secrets.sh",
    "setup:db": "node src/scripts/setupDatabase.js",
    "db:setup": "node dist/scripts/setupDatabase.js",
    "setup:user-settings": "tsx scripts/setup-user-settings.ts",
    "setup:user-settings:interactive": "tsx scripts/setup-user-settings-interactive.ts"
  },
  "keywords": [
    "clubos",
    "golf",
    "simulator",
    "backend"
  ],
  "author": "ClubOSV1",
  "license": "ISC",
  "dependencies": {
    "@slack/webhook": "^7.0.2",
    "async-mutex": "^0.5.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^4.24.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "rate-limiter-flexible": "^3.0.6",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
