# Test Environment Variables
NODE_ENV=test
PORT=3001

# Test Database (using in-memory or test database)
DATABASE_URL=postgresql://postgres:test@localhost:5432/clubos_test

# Authentication
JWT_SECRET=test-jwt-secret-for-testing-only
SESSION_SECRET=test-session-secret-for-testing-only

# CORS
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Test Keys (not real)
OPENAI_API_KEY=sk-test-key-not-real
OPENPHONE_API_KEY=test-openphone-key
HUBSPOT_API_KEY=test-hubspot-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/test/webhook
SLACK_CHANNEL=#test-channel

# Encryption (32 chars for test)
ENCRYPTION_KEY=test-encryption-key-32-chars-ok\!

# Push Notifications (test keys)
VAPID_PUBLIC_KEY=test-vapid-public-key
VAPID_PRIVATE_KEY=test-vapid-private-key
VAPID_EMAIL=test@example.com

# OpenPhone Webhook
OPENPHONE_WEBHOOK_SECRET=test-webhook-secret
OPENPHONE_DEFAULT_NUMBER=+15555555555

# Feature Flags for Testing
USE_INTELLIGENT_SOP=false
SOP_SHADOW_MODE=false
SOP_ENABLED=false

# Disable external services in tests
DISABLE_EXTERNAL_APIS=true
DISABLE_SLACK=true
DISABLE_PUSH_NOTIFICATIONS=true
EOF < /dev/null